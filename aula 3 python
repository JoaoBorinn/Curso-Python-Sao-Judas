print ("Inicio aula 3")

contador = 1

while (contador <= 10):
  print (contador)
  contador = contador+1    #contador += 1
  
# laço for (python for= for each)
fruta = "morango"
print (fruta)

#lista
frutas = ["morango", "laranja", "manga"]
#exibir a terceira fruta
print(frutas[2])
#exibir quantas frutas tem na minha lista
print(len(frutas))  #length = tamanho
# quero incluir um fruta nova na lista
frutas.append ("pera")
print(len(frutas))
print(frutas)

# i é o contador
i=0
while(i<len(frutas)):
  print(frutas[i])
  i = i + 1

print ("exemple das frutas com for")
for fruta in frutas:
       print(fruta)
